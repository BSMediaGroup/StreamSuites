{
  "system": {
    "platform_polling_enabled": true,
    "platforms": {
      "youtube": { "enabled": true },
      "twitch": { "enabled": true },
      "discord": { "enabled": true },
      "kick": { "enabled": false }
    },
    "jobs": {
      "clips": { "enabled": true },
      "polls": { "enabled": true },
      "tallies": { "enabled": true }
    },
    "hot_reload": {
      "enabled": false,
      "watch_path": "runtime/exports",
      "interval_seconds": 5
    }
  },
  "chat": {
    "api": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 8210,
      "allow_origins": ["*"]
    },
    "synthetic": {
      "enabled": true,
      "creator_token": "dev-creator-token",
      "discord_bot_token": "dev-discord-token",
      "rate_limit_per_minute": 30
    }
  },
  "clips": {
    "default_destination": {
      "platform": "rumble",
      "channel_url": "https://rumble.com/c/StreamSuites"
    },
    "encoding": {
      "concurrency": 2,
      "ffmpeg_path": "X:\\ffmpeg\\bin\\ffmpeg.exe"
    },
    "export": {
      "state_path": "clips.json",
      "interval_seconds": 30
    }
  }
}
