<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<appSettings>
		<!-- ========================================================= -->
		<!-- StreamSuites Desktop Admin â€” Runtime Configuration -->
		<!-- ========================================================= -->

		<!-- Directory containing runtime export snapshots -->
		<add key="SnapshotDirectory"
			 value="G:\StreamSuites-Dashboard\docs\shared\state" />

		<!-- Snapshot filename (allows override later without code changes) -->
		<add key="SnapshotFileName"
			 value="runtime_snapshot.json" />

		<!-- Snapshot refresh cadence in milliseconds -->
		<!-- Example: 5000 = refresh every 5 seconds -->
		<add key="SnapshotRefreshIntervalMs"
			 value="5000" />

		<!-- Snapshot staleness threshold in seconds -->
		<!-- Used to determine stale/dead runtime states (STEP G) -->
		<add key="SnapshotStaleAfterSeconds"
			 value="15" />

		<!-- Optional runtime executable path (not used yet) -->
		<!-- Reserved for lifecycle controls (STEP H) -->
		<add key="RuntimeExecutablePath"
			 value="" />

		<!-- Service start behavior: prompt (default) or auto -->
		<add key="ServiceAutoStartMode"
			 value="prompt" />

		<!-- Optional per-service auto-restart toggles -->
		<add key="AuthApiAutoRestartEnabled"
			 value="false" />
		<add key="CloudflareAutoRestartEnabled"
			 value="false" />
	</appSettings>

</configuration>
