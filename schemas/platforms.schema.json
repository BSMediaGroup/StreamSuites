{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StreamSuites Platforms Configuration",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "additionalProperties": true,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "enabled": {
            "type": "boolean"
          },
          "telemetry_enabled": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
