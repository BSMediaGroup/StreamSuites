{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System configuration",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "platform_polling_enabled": {
          "type": "boolean",
          "default": true
        },
        "platforms": {
          "type": "object",
          "properties": {
            "youtube": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true }
              },
              "additionalProperties": true
            },
            "twitch": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true }
              },
              "additionalProperties": true
            },
            "discord": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        },
        "jobs": {
          "type": "object",
          "properties": {
            "clips": {
              "type": "object",
              "properties": { "enabled": { "type": "boolean", "default": true } },
              "additionalProperties": true
            },
            "polls": {
              "type": "object",
              "properties": { "enabled": { "type": "boolean", "default": true } },
              "additionalProperties": true
            },
            "tallies": {
              "type": "object",
              "properties": { "enabled": { "type": "boolean", "default": true } },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "chat": {
      "type": "object",
      "properties": {
        "api": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "host": { "type": "string" },
            "port": { "type": "integer", "minimum": 1 },
            "allow_origins": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": true
        },
        "synthetic": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "creator_token": { "type": "string" },
            "discord_bot_token": { "type": "string" },
            "rate_limit_per_minute": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "clips": {
      "type": "object",
      "properties": {
        "default_destination": {
          "type": "object",
          "properties": {
            "platform": { "type": "string" },
            "channel_url": { "type": "string" }
          },
          "required": ["platform", "channel_url"],
          "additionalProperties": true
        },
        "encoding": {
          "type": "object",
          "properties": {
            "concurrency": { "type": "integer", "minimum": 1 },
            "ffmpeg_path": { "type": "string" }
          },
          "additionalProperties": true
        },
        "export": {
          "type": "object",
          "properties": {
            "state_path": { "type": "string" },
            "interval_seconds": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
