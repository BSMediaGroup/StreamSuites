{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System configuration",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "platform_polling_enabled": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": true
    },
    "clips": {
      "type": "object",
      "properties": {
        "default_destination": {
          "type": "object",
          "properties": {
            "platform": { "type": "string" },
            "channel_url": { "type": "string" }
          },
          "required": ["platform", "channel_url"],
          "additionalProperties": true
        },
        "encoding": {
          "type": "object",
          "properties": {
            "concurrency": { "type": "integer", "minimum": 1 },
            "ffmpeg_path": { "type": "string" }
          },
          "additionalProperties": true
        },
        "export": {
          "type": "object",
          "properties": {
            "state_path": { "type": "string" },
            "interval_seconds": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
